<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_main</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_main</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="menu_text_style" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">17sp</item>
        <item name="android:padding">2sp</item>
        <item name="android:fontFamily">@font/convergence</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="tab_style" parent="@style/Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/convergence</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">@color/pink</item>
    </style>
</resources>